<!DOCTYPE html>
<html>
<head>
  <title>Fashion Lay Plan Tool</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
    }
    canvas {
      border: 1px solid #000;
      margin-top: 20px;
    }
    label, select {
      display: block;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <h1>Fashion Lay Plan Tool</h1>
  <label>Select Garment Type:
    <select id="garmentType">
      <option value="dress">Dress</option>
      <option value="skirt">Skirt</option>
      <option value="top">Top</option>
      <option value="mens_shirt">Men's Shirt</option>
      <option value="mens_trousers">Men's Trousers</option>
      <option value="overalls">Overalls</option>
      <option value="suit">Suit</option>
      <option value="playsuit">Playsuit</option>
    </select>
  </label>
  <div id="formFields"></div>
  <button onclick="drawPlan()">Generate Lay Plan</button>
  <canvas id="canvas" width="600" height="400"></canvas>

  <script>
    const formContainer = document.getElementById("formFields");
    const garmentSelect = document.getElementById("garmentType");

    garmentSelect.addEventListener("change", updateForm);
    updateForm(); // initialise

    function updateForm() {
      const type = garmentSelect.value;
      formContainer.innerHTML = '';

      const createInput = (label, id, value) => {
        formContainer.innerHTML += `<label>${label}: <input id="${id}" value="${value}"></label>`;
      };

      if (type === "dress") {
        createInput("Bust", "bust", 90);
        createInput("Waist", "waist", 70);
        createInput("Length", "length", 100);
      } else if (type === "skirt") {
        createInput("Waist", "waist", 70);
        createInput("Length", "length", 60);
      } else if (type === "top") {
        createInput("Bust", "bust", 90);
        createInput("Length", "length", 50);
      } else if (type === "mens_shirt") {
        createInput("Chest", "chest", 100);
        createInput("Length", "length", 75);
      } else if (type === "mens_trousers") {
        createInput("Waist", "waist", 85);
        createInput("Hip", "hip", 100);
        createInput("Length", "length", 105);
      } else if (type === "overalls") {
        createInput("Chest", "chest", 95);
        createInput("Waist", "waist", 80);
        createInput("Hip", "hip", 100);
        createInput("Length", "length", 120);
      } else if (type === "suit") {
        createInput("Chest", "chest", 100);
        createInput("Waist", "waist", 85);
        createInput("Hip", "hip", 100);
        createInput("Jacket Length", "jacketLength", 75);
        createInput("Trouser Length", "trouserLength", 105);
      } else if (type === "playsuit") {
        createInput("Bust", "bust", 90);
        createInput("Waist", "waist", 70);
        createInput("Hip", "hip", 95);
        createInput("Length", "length", 100);
      }
    }

    function drawPlan() {
      const canvas = document.getElementById("canvas");
      const ctx = canvas.getContext("2d");
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      const type = garmentSelect.value;
      const scale = 2;

      ctx.font = "14px Arial";

      if (type === "dress") {
        const bust = +document.getElementById("bust").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#f4c2c2";
        ctx.fillRect(10, 10, bust * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Dress", 12, 25);
      } else if (type === "skirt") {
        const waist = +document.getElementById("waist").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#add8e6";
        ctx.fillRect(10, 10, waist * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Skirt", 12, 25);
      } else if (type === "top") {
        const bust = +document.getElementById("bust").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#d3ffce";
        ctx.fillRect(10, 10, bust * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Top", 12, 25);
      } else if (type === "mens_shirt") {
        const chest = +document.getElementById("chest").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#87ceeb";
        ctx.fillRect(10, 10, chest * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Men's Shirt", 12, 25);
      } else if (type === "mens_trousers") {
        const hip = +document.getElementById("hip").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#dcdcdc";
        ctx.fillRect(10, 10, (hip / 2 + 10) * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Men's Trousers", 12, 25);
      } else if (type === "overalls") {
        const hip = +document.getElementById("hip").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#f5deb3";
        ctx.fillRect(10, 10, (hip / 2 + 10) * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Overalls", 12, 25);
      } else if (type === "suit") {
        const chest = +document.getElementById("chest").value;
        const hip = +document.getElementById("hip").value;
        const jacketLength = +document.getElementById("jacketLength").value;
        const trouserLength = +document.getElementById("trouserLength").value;
        ctx.fillStyle = "#e6e6fa";
        ctx.fillRect(10, 10, (chest / 2 + 10) * scale, jacketLength * scale);
        ctx.fillText("Suit Jacket", 12, 25);
        ctx.fillStyle = "#d8bfd8";
        ctx.fillRect(10, jacketLength * scale + 20, (hip / 2 + 10) * scale, trouserLength * scale);
        ctx.fillText("Suit Trousers", 12, jacketLength * scale + 35);
      } else if (type === "playsuit") {
        const hip = +document.getElementById("hip").value;
        const length = +document.getElementById("length").value;
        ctx.fillStyle = "#ffe4e1";
        ctx.fillRect(10, 10, (hip / 2 + 10) * scale, length * scale);
        ctx.fillStyle = "#000";
        ctx.fillText("Playsuit", 12, 25);
      }
    }
  </script>
</body>
</html>
